{% include('./header.twig') %}
{% include('./navbar.twig') %}
<br>
<div class="container bg-dark text-light rounded">
    <br>
    <h1> {{ title }}</h1>
    <br>
    <form action="" method="post">
        <div class="row" id="insertDbForm">
            <div class="col-6 col-lg-3">
                <label for="date" class="form-label">Datum</label>
                <input type="date" class="form-control" name="date[]" id="date" required>
            </div>
            <div class="col-6 col-lg-3">
                <label for="billingType" class="form-label">Zahlweise</label>
                <select class="form-control" name="billingType[]" id="billingType" required>
                    <option value="monthly">Monatlich</option>
                    <option value="yearly">Jährlich</option>
                </select>
            </div>
            <div class="col-6 col-lg-3">
                <label for="price" class="form-label">Kosten</label>
                <input type="number" step="0.01" class="form-control" name="price[]" id="price">
            </div>
            <div class="col-6 col-lg-3">
                <label for="insuranceType" class="form-label">Versicherungstyp</label>
                <input type="text" class="form-control" name="insuranceType[]" id="insuranceType" required>
            </div>
        </div>
        <br>
        <button type="button" class="btn btn-link col-6 col-lg-2" id="addRow">Reihe hinzufügen</button>
        <br>
        <br>
        <button type="submit" class="btn bg-green text-light">Absenden</button>
    </form>
    <br>
</div>
{% include('./footer.twig') %}